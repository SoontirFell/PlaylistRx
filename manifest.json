{
    "manifest_version": 2,
    "name": "Playlistr",
    "version": "1.0",
    "description": "Dynamically create a multi-platform playlist from your recently saved links on reddit.",
    "homepage_url": "https://github.com/SoontirFell/playlistr",

    "applications": {
        "gecko": {
            "id": "open-my-page-button@mozilla.org",
            "strict_min_version": "45.0"
        }
    },
    
    "background": {
        "scripts": ["background.js"]
    },
    
    
    "browser_action": {
        "default_icon": "icons/turntable.svg"
    },
    
    
    "icons": {
        "24": "icons/turntable.24.png",
        "64": "icons/turntable.64.png"
    },
    
    "content_security_policy": "script-src 'self' https://www.youtube.com https://s.ytimg.com; object-src 'self'",
    
    "permissions": ["tabs", "background", "identity", "https://www.reddit.com/api/v1/*", "*://www.googleapis.com/youtube/v3/*", "*://www.youtube.com/iframe_api"]
    
}